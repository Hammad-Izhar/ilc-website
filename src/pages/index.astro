---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

import hero from "../assets/shirts.jpg";
import shirt_shoes from "../assets/shirt-shoes.jpg";
---

<Layout title="International Leather Clothiers">
    <div class="hero min-h-screen" style={`background-image: url(${hero});`}>
        <div class="hero-overlay bg-opacity-40"></div>
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold text-lime-200">Hello there.</h1>
                <p class="py-6 font-semibold text-lime-200">
                    We are International Leather Clothiers. Kolkata's number one
                    leather and fabric goods maker and supplier.
                </p>
                <button class="btn btn-primary">Contact Us</button>
            </div>
        </div>
    </div>

    <section class="min-h-fit max-w-screen-lg m-auto">
        <h2 class="text-center text-5xl font-bold p-4 my-4">Our Services</h2>
        <div class="flex flex-col lg:flex-row gap-4 mb-10">
