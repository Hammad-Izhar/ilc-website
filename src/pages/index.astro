---
import Layout from "@layouts/Layout.astro";

import heroPicture from "@assets/shirts.jpg";
import hero from "@assets/hero.mp4";
import shirt_shoes from "@assets/shirt-shoes.jpg";
import grandPrixOriginals from "@assets/suppliers/grandprixoriginals.webp";
import gamesSportsWear from "@assets/suppliers/games.jpeg";
import InfoCards from "@components/InfoCards";
---

<Layout title="Mercury">
    <div slot="hero" class="min-h-screen bg-black">
        <div
            slot="hero"
            class="hero min-h-screen lg:max-h-[80vh] overflow-hidden"
        >
            <div class="bg-black/25 w-full h-full z-10"></div>
            <div
                class="hero-overlay bg-opacity-10 h-full bg-cover"
                style={`background-image: url(${heroPicture.src});`}
            >
                <video
                    class="hidden lg:block object-cover w-full h-full"
                    autoplay
                    loop
                    muted
                    poster={heroPicture.src}
                >
                    <source src={hero} type="video/mp4" />
                </video>
            </div>
            <div class="hero-content text-center z-20">
                <div class="-translate-y-1/2">
                    <h1 class="text-6xl font-bold text-white">Hello there.</h1>
                    <p class="text-2xl py-6 font-semibold text-white">
                        We are Mercury.
                    </p>
                    <button class="btn btn-primary">Contact Us</button>
                </div>
            </div>
        </div>
    </div>
    <section class="min-h-fit snap-start">
        <h2 class="text-center text-5xl font-bold p-4 my-4">Our Services</h2>
        <InfoCards client:load />
    </section>

    <section class="min-h-fit">
        <h2 class="text-center text-5xl font-bold p-4 my-4">Our Story</h2>
        <div class="flex flex-col lg:flex-row gap-20 mb-10">
            <div class="basis-full">
                <img
                    src={shirt_shoes.src}
                    width={shirt_shoes.width}
                    height={shirt_shoes.height}
                />
            </div>
            <div class="flex flex-col basis-full justify-center">
                <p class="py-4 text-lg">
                    Mercury isn't just a wholesale company; we're a
                    family-operated legacy of craftsmanship and innovation.
                    Rooted in New York, our journey began in 2001. Over the
                    years, we've evolved into a beacon of quality and
                    creativity. With a passion for perfection and an unwavering
                    commitment to excellence, we have been selling high-quality
                    garments and leather goods that redefine style.
                    <br />
                    <br />
                    For two decades, we've been dedicated to delivering more than
                    just products - we offer experiences. Our high-quality garments
                    and leather goods are a testament to the marriage of traditional
                    craftsmanship and contemporary design. Each piece that leaves
                    our facility carries the Mercury legacy of precision, passion,
                    and perfection.
                </p>
                <a class="btn btn-primary" href="about-us">Read More!</a>
            </div>
        </div>
    </section>

    <section class="min-h-fit">
        <h2 class="text-center text-5xl font-bold p-4 my-4">
            Trusted Supplier
        </h2>
        <div class="flex gap-10 justify-center items-center">
            <figure class="basis-full">
                <img
                    src={grandPrixOriginals.src}
                    width={grandPrixOriginals.width}
                    height={grandPrixOriginals.height}
                />
            </figure>
            <figure class="basis-full">
                <img
                    src={gamesSportsWear.src}
                    width={grandPrixOriginals.width}
                    height={grandPrixOriginals.height}
                />
            </figure>
        </div>
    </section>

    <!-- <section class="min-h-fit">
        <h2 class="text-center text-5xl font-bold p-4 my-4">Contact Us</h2>
        <div class="flex flex-col justify-center p-4 gap-4">
            <p>
                What are you waiting for? If you have a design you would like to
                see be made in reality don't wait to contact us!
            </p>
            <ContactForm />
        </div>
    </section> -->
</Layout>
