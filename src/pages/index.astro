            />
        </div>
    </section>

    <section class="min-h-fit max-w-screen-lg m-auto">
        <h2 class="text-center text-5xl font-bold p-4 my-4">Our Story</h2>
        <div class="flex flex-col lg:flex-row gap-4 mb-10">
            <div class="basis-full">
                <img src={shirt_shoes} />
            </div>
            <div class="flex flex-col basis-full justify-center">
                <p class="py-4">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
