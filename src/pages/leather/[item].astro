---
export function getStaticPaths() {
    const fabrics = [
        { idx: "1", item: "beige", itemName: "Beige" },
        { idx: "2", item: "black", itemName: "Black" },
        { idx: "3", item: "brown", itemName: "Brown" },
        { idx: "4", item: "cream", itemName: "Cream" },
        { idx: "5", item: "dark-cream", itemName: "Dark Cream" },
        { idx: "6", item: "gold", itemName: "Gold" },
        { idx: "7", item: "grey", itemName: "Grey" },
        { idx: "8", item: "gulf-blue", itemName: "Gulf Blue" },
        { idx: "9", item: "indigo", itemName: "Indigo" },
        { idx: "10", item: "light-cream", itemName: "Light Cream" },
        { idx: "11", item: "navy", itemName: "Navy" },
        { idx: "12", item: "orange", itemName: "Orange" },
        { idx: "13", item: "red", itemName: "Red" },
        { idx: "14", item: "royal blue", itemName: "Royal Blue" },
        { idx: "15", item: "vintage", itemName: "Vintage" },
        { idx: "16", item: "white", itemName: "White" },
    ];

    return fabrics.map(({ idx, item, itemName }) => {
        return {
            params: { item },
            props: { idx, itemName },
        };
    });
}

import ItemLayout from "@layouts/ItemLayout.astro";

const { idx, itemName } = Astro.props;
const imgSrc = (await import(`../../assets/leather/${idx}_${itemName}.jpg`))
    .default;
---

<ItemLayout itemName={itemName} imgSrc={imgSrc} itemPage="leather" />
