---
interface Props {
    imgURL: string;
    name: string;
    page: string;
}

const { page, imgURL, name } = Astro.props;
---

<a
    class="card card-compact w-48 h-48 shadow-xl relative overflow-hidden group"
    href={`/${page}/${name.replaceAll(" ", "-").toLowerCase()}`}
>
    <img class="object-fill" src={imgURL} alt={name} />
    <div
        class="lg:translate-y-full absolute bottom-0 w-full h-1/3 bg-white z-10 flex p-4 transition-all lg:group-hover:translate-y-0 lg:group-focus:translate-y-0 justify-center items-center text-center"
    >
        <h2 class="card-title">{name}</h2>
    </div>
</a>
