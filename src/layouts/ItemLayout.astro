---
import Navbar from "@components/Navbar/Navbar.astro";
import Footer from "@components/Footer/Footer.astro";
import DrawerSidebar from "@components/Navbar/DrawerSidebar.astro";
import ContactForm from "@components/UI/ContactForm.astro";
export interface Props {
    itemName: string;
    imgSrc: string;
    itemPage: string;
}

const { itemName, imgSrc, itemPage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>ME | {itemName}</title>
    </head>
    <body>
        <div class="drawer drawer-end">
            <input id="nav-drawer" type="checkbox" class="drawer-toggle" />
            <div class="drawer-content flex flex-col">
                <Navbar />
                <div class="flex-1">
                    <main
                        style="max-width: min(100ch, 100% - 4rem)"
                        class="mx-auto"
                    >
                        <div
                            class="flex py-8 justify-center items-center flex-col md:flex-row"
                        >
                            <div class="basis-1/2">
                                <a href="./" class="text-lg">‚ùÆ Back to Browse</a
                                >
                                <img src={imgSrc} />
                            </div>
                            <div
                                class="flex flex-col gap-4 basis-1/2 items-center"
                            >
                                <h2 class="text-5xl font-bold">{itemName}</h2>
                                <p>
                                    Want to see more of this? Feel free to
                                    contact us!
                                </p>
                                <ContactForm />
                            </div>
                        </div>
                    </main>
                </div>
                <Footer />
            </div>
            <div class="drawer-side">
                <label for="nav-drawer" class="drawer-overlay"></label>
                <DrawerSidebar />
            </div>
        </div>

        <!-- <Footer /> -->
    </body>

    <style is:global>
        html {
            font-family: system-ui, sans-serif;
            background-color: #f6f6f6;
        }
        code {
            font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
                DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
                monospace;
        }
    </style>
</html>
